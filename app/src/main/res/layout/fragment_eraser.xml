<FrameLayout android:id="@+id/fragment_erase"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:styleable="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kanishk.galleryapp.EraserFragment">
    
    <com.example.kanishk.galleryapp.ScratchView
        android:id="@+id/scratchView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        styleable:antiAlias="true"
        styleable:revealSize="20dp"
        styleable:scratchable="true"
        styleable:scratchDrawable="@drawable/girl"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerInside"/>
</FrameLayout>
